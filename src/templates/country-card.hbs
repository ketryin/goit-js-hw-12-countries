<div class="card">
    <div class="card-body">
        <h2 class="card-title">Название страны: {{name}}</h2>
        <p class="card-text">Столица: {{capital}}</p>
        <p class="card-text">Население: {{population}}</p>
        <p class="card-text">Язык: </p>

        <ul class="list-group"></ul>
            {{#each languages}}
            <li class="list-group-item">{{name}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="card-img-block">
        <img class="card-img" src="{{flag}}" alt="{{name}}">
    </div>
</div>

